@using TheoryProtocol.Components.Pages
@inherits LayoutComponentBase

<MyMudThemeProvider/>
<MyMudProviders/>
<CascadingValue Value="this">
    <MudLayout>
        <DrawerComponent @bind-DrawerOpen="drawerOpen" @ref="drawerComponent"></DrawerComponent>
        <MudMainContent>
            <MudContainer Fixed="true" Style="margin: 10px">
                <Home @bind-SummaryIsShown="summaryIsShown" @ref="home"></Home>
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</CascadingValue>

@code {
    public DrawerComponent drawerComponent;
    public Home home;
    public bool drawerOpen = true;
    public bool summaryIsShown = false;
}