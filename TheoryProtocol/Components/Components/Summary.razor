@using TheoryProtocol.Components.Layout
<MudText Align="Align.Center" Typo="Typo.h1" Style="font-family: Impact">Summary</MudText>

@if (showCanvas)
{
    <Canvas @bind-ShowCanvas="showCanvas" Id="Id"></Canvas>
}

<MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="ShowCanvas">Show Board</MudButton>

@code
{
    [Parameter] public int Id { get; set; }
    public bool showCanvas = false;
    
    [CascadingParameter]
    public MainLayout MainLayout { get; set; }


    public void ShowCanvas()
    {
        showCanvas = !showCanvas;
    }
}