@page "/"
@using TheoryProtocol.Components.Layout

<MudText Align="Align.Center" Typo="Typo.h1">Summary</MudText>
<MudPaper Class="d-flex justify-center align-start flex-grow-1 gap-4" Elevation="0">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="width: 300px" @onclick="Click">Open to see the latest stories!</MudButton>
</MudPaper>

@code
{
    [CascadingParameter] protected EventCallback<bool> DrawerOpenedEvent { get; set; }
    bool _drawerIsOpen = true;
    public void Click()
    {
        _drawerIsOpen = !_drawerIsOpen;
        DrawerOpenedEvent.InvokeAsync(_drawerIsOpen);
    }
}